<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.localloop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LocalLoop">

        <!-- Entry point of the app -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- New dashboard screen -->
        <activity android:name=".DashboardActivity" android:exported="false" />

        <!-- Screens under category -->
        <activity android:name=".ui.category.AddEditCategoryActivity" android:exported="false" />
        <activity android:name=".ui.category.AddEventActivity" android:exported="false" />
        <activity android:name=".ui.category.CategoryListActivity" android:exported="false" />
        <activity android:name=".ui.category.EditEventActivity" android:exported="false" />
        <activity android:name=".ui.category.SearchEventsActivity" android:exported="false" />

        <!-- Signup screen -->
        <activity android:name=".ui.category.SignupActivity" android:exported="false" />

    </application>
</manifest>
